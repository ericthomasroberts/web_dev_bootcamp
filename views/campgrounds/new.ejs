<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width:50%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="Text" name="newCampgroundName" placeholder="Campground Name">                    
                </div>
                <div class="form-group">
                   <input class="form-control" type="Text" name="newCampgroundImage" placeholder="Campground Image URL">                 
                </div>
                <div class="form-group">
                    <input class="form-control" type="Text" name="newCampgroundDesc" placeholder="Campground Description">                    
                </div>
                <div class="form-group">
                    <button class="btn-primary btn-block btn btn-large btn-default">Submit!</button>                    
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

