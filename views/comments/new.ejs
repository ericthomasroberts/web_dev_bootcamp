<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Comment to <%= campground.name %></h1>
        <div style="width:50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="Text" name="comment[text]" placeholder="Text">                    
                </div>
                <div class="form-group">
                    <button class="btn-primary btn-block btn btn-large btn-default">Submit!</button>                    
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

